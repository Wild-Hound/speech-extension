{
  "manifest_version": 3,
  "name": "Speechify",
  "description": "Voice reading extension",
  "version": "1.0.0",
  "icons": {
    "16": "user-experience.png",
    "48": "user-experience.png",
    "128": "user-experience.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chrome Extension",
    "default_icon": "user-experience.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "backgroundScript.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
